#!/bin/sh

# Get the current branch name
BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)

echo "ğŸ” Running lint and prettier checks before pushing branch: $BRANCH_NAME"
npx lint-staged
STATUS=$?

if [ $STATUS -ne 0 ]; then
    echo "âŒ Push blocked: please fix lint/prettier errors before pushing."
    exit 1
else
 echo "âœ… Lint and prettier checks passed. Proceeding with push."
fi